{
  "name": "knik",
  "version": "1.0.0",
  "description": "Knik - AI Coding Agent with Voice",
  "license": "ISC",
  "author": "amreetleo123@gmail.com",
  "type": "module",
  "main": "electron-main.js",
  "scripts": {
    "source:venv": ". .venv/bin/activate && exec $SHELL",
    "start": "source .env && source .venv/bin/activate && arch -arm64 python src/main.py --mode gui",
    "start:gui": "source .env && source .venv/bin/activate && arch -arm64 python src/main.py --mode gui",
    "start:console": "source .env && source .venv/bin/activate && arch -arm64 python src/main.py --mode console",
    "start:console:split": "./scripts/start_console_split.sh",
    "start:console:dual": "./scripts/start_console_dual.sh",
    "start:web": "concurrently \"npm run start:web:backend\" \"npm run start:web:frontend\"",
    "start:web:backend": "./scripts/start_web_backend.sh",
    "start:web:frontend": "./scripts/start_web_frontend.sh",
    "start:electron": "./scripts/start_electron.sh",
    "electron:dev": "concurrently \"npm run start:web:backend\" \"npm run start:web:frontend\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "electron-builder",
    "electron:build:mac": "electron-builder --mac",
    "electron:build:win": "electron-builder --win",
    "electron:build:linux": "electron-builder --linux",
    "lint": "source .venv/bin/activate && ruff check .",
    "lint:fix": "source .venv/bin/activate && ruff check --fix .",
    "format": "source .venv/bin/activate && ruff format .",
    "format:check": "source .venv/bin/activate && ruff format --check .",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "build": {
    "appId": "com.knik.app",
    "productName": "Knik",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "electron-main.js",
      "electron-preload.js",
      "src/apps/web/frontend/dist/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "assets/icon.icns"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "assets/icon.png",
      "category": "Utility"
    }
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "electron": "^39.2.6",
    "electron-builder": "^26.0.12",
    "electron-is-dev": "^3.0.1",
    "wait-on": "^8.0.5"
  }
}
